<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="33dp"
    android:layout_height="83dp"
    android:id="@+id/layout_day_task"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:paddingVertical="8dp"
    android:orientation="vertical"
    android:background="@drawable/layout_day_task_background">

    <FrameLayout
        android:id="@+id/info_light"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/layout_day_task_background"
        android:backgroundTint="#ff9124"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/day_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#596279"
        android:text="@string/example_initial"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/date_of_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/_18"
        android:textStyle="bold"
        android:textColor="#7f8a9c"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>